.swiper-item {
    display: block;
    height: 150px;
}

.swiper-container {
    width: 100%;
    position: relative;
}

.swiper-container .dots {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 20rpx;
    display: flex;
    justify-content: center;
}

.swiper-container .dots .dot {
    margin: 0 8rpx;
    width: 14rpx;
    height: 14rpx;
    background: #fff;
    border-radius: 50%;
    transition: all 0.6s;
    opacity: 0.5;
}

.swiper-container .dots .dot.active {
    width: 14rpx;
    opacity: 1;
}

.type-container {
    width: 100%;
    height: 88rpx;
    background-color: #fff;
}

.type-navbar {
    display: flex;
    width: 100%;
    height: 88rpx;
    white-space: nowrap;
    overflow: hidden;
}

.type-navbar-item {
    display: inline-block;
    font-size: 24rpx;
    width: 160rpx;
    text-align: center;
    line-height: 84rpx;
}

.type-item-on {
    border-bottom: 4rpx solid #e64340;
}

.goods-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 24rpx;
}

.pos-fiexd {
    position: fixed;
    top: 0;
    left: 0;
}

.goods-box {
    width: 339rpx;
    height: 472rpx;
    background-color: #fff;
    margin-bottom: 24rpx;
}

.goods-box .img-box {
    width: 339rpx;
    height: 339rpx;
    overflow: hidden;
}

.goods-box .img-box image {
    width: 339rpx;
    height: 339rpx;
}

/* overflow:hidden和text-overflow这两个要配合使用 */

.goods-box .goods-title {
    width: 280rpx;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 24rpx 0 0rpx 0;
    color: #000;
}

.goods-box .goods-price {
    width: 280rpx;
    font-size: 24rpx;
    padding: 24rpx 0;
    color: #e64340;
}
/* 隐藏滚动条 */
::-webkit-scrollbar{
    height: 0;
    width: 0;
    color: transparent;
}
